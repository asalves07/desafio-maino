<%= form_with(model: team, local: true) do |form| %>
  <% if team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12 col-sm-12 ">
      <div class="x_panel">
        <div class="x_title">
          <h2> Dados do Time</h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <br>

          <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">

            <div class="item form-group">
              <%= form.label :name, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6 ">
                <%= form.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="item form-group">
              <%= form.label :coach_id, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6 ">
                <%= form.select("coach_id", @coaches_options, {}, class: "form-control")%>
              </div>
            </div>


            <div class="item form-group">
              <div class="col-md-6 col-sm-6 offset-md-3">
                <%= link_to 'Voltar', teams_path, class: "btn btn-danger"%>
                <button type="submit" class="btn btn-success">Cadastrar</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
