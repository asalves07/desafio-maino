<p id="notice"><%= notice %></p>

<h4>
  <strong>Time:</strong>
  <%= @team.name %>
</h4>

<h5>
  <strong>Treinador:</strong>
  <%= @team.coach.name %>
</h5>

<div class="row">
  <div class="x_panel">
    <div class="x_content">
      <% @team.pokemons.each do |pokemon| %>
        <div class="col-md-6 col-sm-6  profile_details">
          <div class="well profile_view">
            <div class="col-sm-12">
              <h4 class="brief"><i>Pokemon</i></h4>
              <div class="left col-md-7 col-sm-7">
                <h2><%= pokemon.name %></h2>
                <p><strong>Tipo: </strong> <%= pokemon.kind %> </p>
                <p><strong>Tipo: </strong> <%= pokemon.kind_2 %> </p>
              </div>
              <div class="right col-md-5 col-sm-5 text-center">
                <%= image_tag(pokemon.sprite, alt:"", class:"img-circle img-fluid")  %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
